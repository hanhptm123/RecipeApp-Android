<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_favourite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fontFamily="sans-serif"
    android:fitsSystemWindows="true">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/layout_header_favourite"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#b9e87c"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <!-- Nút back -->
        <ImageButton
            android:id="@+id/btnBack_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/btnback" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txt_title_favourite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Your Favourite List"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <!-- RecyclerView hiển thị danh sách favourite -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFavourite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:contentDescription="List of your favorite recipes" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="#b9e87c"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Enjoy Cooking Every Day!!!"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
